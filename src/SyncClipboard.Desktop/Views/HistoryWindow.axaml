<Window x:Class="SyncClipboard.Desktop.Views.HistoryWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:m="using:SyncClipboard.Core.Models"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:views="using:SyncClipboard.Desktop.Views"
        xmlns:vm="using:SyncClipboard.Core.ViewModels"
        xmlns:vms="using:SyncClipboard.Core.ViewModels.Sub"
        xmlns:local="using:SyncClipboard.Desktop.Views"
        xmlns:i18n="using:SyncClipboard.Core.I18n"
        xmlns:vc="using:SyncClipboard.Desktop.ValueConverters"
        xmlns:asyncImage="using:AsyncImageLoader"
        x:Name="_HistoryWindow"
        Title="{x:Static i18n:Strings.ClipboardHistory}"
        Width="850"
        Height="530"
        d:DesignHeight="450"
        d:DesignWidth="800"
        x:DataType="vm:HistoryViewModel"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        Icon="/Assets/icon.ico"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Theme" Value="{StaticResource DateTimeFlyoutButtonStyle}" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Width" Value="28" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Focusable" Value="False" />
        </Style>
        <Style Selector="ToggleButton">
            <Setter Property="Focusable" Value="False" />
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Focusable" Value="False" />
        </Style>
        <Style Selector="TabStripItem">
            <Setter Property="Focusable" Value="False" />
        </Style>
    </Window.Styles>
    <Window.Resources>
        <ResourceDictionary>
            <x:Double x:Key="TabItemMinHeight">38</x:Double>
        </ResourceDictionary>
    </Window.Resources>
    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+Home" Command="{Binding CtrlHomeCommand}" />
        <KeyBinding Gesture="Ctrl+End" Command="{Binding CtrlEndCommand}" />
    </Window.KeyBindings>
    <Window.DataTemplates>
        <local:ClipboardViewerTemplateSelector>
            <DataTemplate x:Key="Normal" DataType="vms:HistoryRecordVM">
                <TextBlock Text="{Binding Text, Converter={x:Static vc:FuncConverter.LimitLines}}" />
            </DataTemplate>
            <DataTemplate x:Key="Image" DataType="vms:HistoryRecordVM">
                <StackPanel Spacing="4" Orientation="Vertical">
                    <Image MaxHeight="202"
                           HorizontalAlignment="Left"
                           asyncImage:ImageLoader.Source="{Binding FilePath[0]}"
                           Stretch="None"
                           DoubleTapped="Image_DoubleTapped"
                           Opacity="0"
                           Loaded="Image_Loaded" />
                    <TextBlock HorizontalAlignment="Left" Text="{Binding Text, Converter={x:Static vc:FuncConverter.LimitLines}}" />
                </StackPanel>
            </DataTemplate>
        </local:ClipboardViewerTemplateSelector>
    </Window.DataTemplates>
    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial BackgroundSource="Digger"
                                             TintColor="{DynamicResource WindowBackgroudColor}"
                                             TintOpacity="1"
                                             FallbackColor="{DynamicResource WindowBackgroudColor}"
                                             MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <Grid RowDefinitions="Auto, Auto, *">
            <TabStrip x:Name="_FilterSelectorBar"
                      HorizontalAlignment="Center"
                      ItemsSource="{Binding FilterOptions}"
                      SelectedItem="{Binding SelectedFilterOption}"
                      IsTabStop="False"
                      Focusable="False">
                <TabStrip.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type m:LocaleString, x:TypeArguments=vms:HistoryFilterType}">
                        <TextBlock Text="{Binding ShownString}" FontSize="14" />
                    </DataTemplate>
                </TabStrip.ItemTemplate>
            </TabStrip>
            <StackPanel x:Name="_ButtonArea"
                        Margin="0,2,8,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="4">
                <ToggleButton ToolTip.Tip="{x:Static i18n:Strings.WindowTopmost}" Classes="FontIcon" IsChecked="{Binding IsTopmost, Mode=TwoWay}">
                    <ui:FontIcon Glyph="&#xE840;" FontFamily="{StaticResource SymbolThemeFontFamily}" />
                </ToggleButton>
                <Button Width="24" Height="24" VerticalAlignment="Center">
                    <ui:FontIcon Glyph="&#xE10C;" FontFamily="{StaticResource SymbolThemeFontFamily}" />
                    <Button.Flyout>
                        <ui:FAMenuFlyout>
                            <ui:ToggleMenuFlyoutItem Text="{x:Static i18n:Strings.ScrollToTopOnReopen}" IsChecked="{Binding ScrollToTopOnReopen, Mode=TwoWay}" />
                            <ui:ToggleMenuFlyoutItem Text="{x:Static i18n:Strings.CloseHistoryWindowWhenLostFocus}" IsChecked="{Binding CloseWhenLostFocus, Mode=TwoWay}" />
                            <ui:ToggleMenuFlyoutItem Text="显示同步状态" IsChecked="{Binding ShowSyncState, Mode=TwoWay}" />
                            <ui:ToggleMenuFlyoutItem Text="仅显示本地" IsChecked="{Binding OnlyShowLocal, Mode=TwoWay}" />
                        </ui:FAMenuFlyout>
                    </Button.Flyout>
                </Button>
                <OnPlatform>
                    <OnPlatform.Default>
                        <Button Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Command="{Binding CloseCommand}">
                            <ui:FontIcon Glyph="&#xE711;" FontFamily="{StaticResource SymbolThemeFontFamily}" />
                        </Button>
                    </OnPlatform.Default>
                    <OnPlatform.Linux>
                        <Border Width="0" Height="0" />
                    </OnPlatform.Linux>
                </OnPlatform>
            </StackPanel>
            <Grid Grid.Row="1" Margin="20,8,8,8" ColumnDefinitions="*, Auto">
                <TextBox x:Name="_SearchTextBox"
                         Grid.Column="0"
                         VerticalContentAlignment="Center"
                         Text="{Binding SearchText}"
                         Watermark="{x:Static i18n:Strings.HistorySearchPlaceholder}" />
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Width="32"
                            Height="32"
                            Command="{Binding RefreshCommand}"
                            ToolTip.Tip="刷新">
                        <Grid>
                            <ui:FontIcon Glyph="&#xE72C;" FontFamily="{StaticResource SymbolThemeFontFamily}" IsVisible="{Binding !IsLoadingMore}" />
                            <ui:ProgressRing Width="16"
                                             Height="16"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             IsActive="{Binding IsLoadingMore}"
                                             IsVisible="{Binding IsLoadingMore}" />
                        </Grid>
                    </Button>
                    <Button Width="32"
                            Height="32"
                            Command="{Binding ScrollToTopCommand}"
                            ToolTip.Tip="{x:Static i18n:Strings.ScrollToTop}">
                        <ui:FontIcon Glyph="&#xE898;" FontFamily="{StaticResource SymbolThemeFontFamily}" />
                    </Button>
                </StackPanel>
            </Grid>
            <Image x:Name="_InvisualableImage"
                   Grid.Row="2"
                   MaxHeight="800"
                   Stretch="None"
                   IsHitTestVisible="False"
                   Opacity="0" />
            <ListBox x:Name="_ListBox"
                     Grid.Row="2"
                     ItemsSource="{Binding HistoryItems}"
                     SelectionMode="Single"
                     SelectedIndex="{Binding SelectedIndex}"
                     DoubleTapped="ListBox_DoubleTapped">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="vms:HistoryRecordVM">
                        <Grid MinHeight="10"
                              ColumnDefinitions="Auto, *, Auto, Auto"
                              Background="Transparent"
                              Opacity="{Binding SyncState, Converter={x:Static vc:FuncConverter.SyncStateToOpacity}}">
                            <Grid.ContextFlyout>
                                <ui:FAMenuFlyout Opening="ItemContextFlyout_Opening" />
                            </Grid.ContextFlyout>
                            <Border Grid.Column="0"
                                    Height="40"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Top">
                                <ui:FontIcon VerticalAlignment="Center" Glyph="{Binding Type, Converter={x:Static vc:FuncConverter.ProfileTypeToFontIcon}}" FontFamily="{StaticResource SymbolThemeFontFamily}" />
                            </Border>
                            <ContentControl Grid.Column="1"
                                            Padding="8,8,0,8"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Content="{Binding .}" />
                            <StackPanel Grid.Column="2" Margin="5,0,0,0" Orientation="Horizontal">
                                <Button Click="CopyButtonClicked">
                                    <ui:FontIcon Glyph="&#xE8C8;" FontFamily="{StaticResource SymbolThemeFontFamily}" />
                                </Button>
                                <Button Click="PasteButtonClicked">
                                    <ui:FontIcon Glyph="&#xE77F;" FontFamily="{StaticResource SymbolThemeFontFamily}" />
                                </Button>
                                <Button Command="{Binding #_HistoryWindow.ViewModel.ChangeStarStatusCommand}" CommandParameter="{Binding .}">
                                    <ui:FontIcon Glyph="{Binding Stared, Converter={x:Static vc:FuncConverter.ToStarIcon}}" FontFamily="{StaticResource SymbolThemeFontFamily}" />
                                </Button>
                                <Button Command="{Binding #_HistoryWindow.ViewModel.DeleteItemCommand}" CommandParameter="{Binding .}">
                                    <ui:FontIcon Glyph="&#xE74D;" FontFamily="{StaticResource SymbolThemeFontFamily}" />
                                </Button>
                            </StackPanel>
                            <Border Grid.Column="3"
                                    Width="2"
                                    Margin="4,0,4,0"
                                    Background="{Binding SyncState, Converter={x:Static vc:FuncConverter.SyncStateToBrush}}"
                                    ToolTip.Tip="{Binding SyncState, Converter={x:Static vc:FuncConverter.SyncStateToText}}"
                                    IsVisible="{Binding #_HistoryWindow.ViewModel.ShowSyncState}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ui:InfoBar x:Name="_InfoBar"
                        Grid.Row="2"
                        Width="400"
                        Margin="{Binding #_ListBox.Bounds.Height, Converter={x:Static vc:FuncConverter.CalculateInfoBarMargin}}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        IsOpen="{Binding ShowInfoBar}"
                        Message="{Binding InfoBarMessage}"
                        Severity="Warning"
                        IsClosable="True" />
        </Grid>
    </Panel>
</Window>
