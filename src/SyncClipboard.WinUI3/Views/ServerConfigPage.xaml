<Page x:Class="SyncClipboard.WinUI3.Views.ServerConfigPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="using:CommunityToolkit.WinUI.Controls"
      xmlns:i18n="using:SyncClipboard.Core.I18n"
      xmlns:vm="using:SyncClipboard.Core.ViewModels"
      xmlns:vc="using:SyncClipboard.WinUI3.ValueConverters"
      xmlns:local="using:SyncClipboard.WinUI3.Views"
      mc:Ignorable="d">
    <Page.Resources>
        <vc:BoolToPasswordIconConverter x:Key="BoolToPasswordIconConverter" />
        <!--<Thickness x:Key="SettingsCardPadding">16,16,60,16</Thickness>
        <Thickness x:Key="SettingsExpanderItemPadding">58,8,60,8</Thickness>
        <Thickness x:Key="ClickableSettingsExpanderItemPadding">58,0,32,0</Thickness>
        <Thickness x:Key="SettingsExpanderItemBorderThickness">0,0,0,0</Thickness>-->
        <Style TargetType="Button" BasedOn="{StaticResource DateTimePickerFlyoutButtonStyle}">
            <Setter Property="Height" Value="32" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Padding" Value="0,0,0,0" />
        </Style>
    </Page.Resources>
    <StackPanel Spacing="10">
        <ui:SettingsExpander Header="{x:Bind i18n:Strings.Server}" Description="{x:Bind i18n:Strings.ServerDescription}" IsExpanded="True">
            <ui:SettingsExpander.HeaderIcon>
                <FontIcon Glyph="&#xE753;" />
            </ui:SettingsExpander.HeaderIcon>
            <ToggleSwitch OnContent="{x:Bind i18n:Strings.On}" OffContent="{x:Bind i18n:Strings.Off}" IsOn="{x:Bind _viewModel.ServerEnable, Mode=TwoWay}" />
            <ui:SettingsExpander.Items>
                <ui:SettingsCard Description="{x:Bind _viewModel.ServerConfigDescription, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <ToggleButton Width="32"
                                      Height="32"
                                      Style="{StaticResource IconToggleButtonStyle}"
                                      IsChecked="{x:Bind _viewModel.ShowServerPassword, Mode=TwoWay}">
                            <FontIcon Glyph="{x:Bind _viewModel.ShowServerPassword, Mode=OneWay, Converter={StaticResource BoolToPasswordIconConverter}}" />
                        </ToggleButton>
                        <Button Command="{x:Bind SetServerCommand}">
                            <FontIcon Glyph="&#xE115;" />
                        </Button>
                    </StackPanel>
                </ui:SettingsCard>
                <ui:SettingsCard Header="{x:Bind i18n:Strings.EnableCustomConfigurationFile}" Description="{x:Bind i18n:Strings.CustomConfigFileDescription}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Width="32"
                                Height="32"
                                Padding="0"
                                Content="&#xE9CE;"
                                Command="{x:Bind _viewModel.OpenCustomConfigDescLinkCommand}"
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                Style="{ThemeResource DateTimePickerFlyoutButtonStyle}" />
                        <ToggleSwitch OnContent="{x:Bind i18n:Strings.On}" OffContent="{x:Bind i18n:Strings.Off}" IsOn="{x:Bind _viewModel.EnableCustomConfigurationFile, Mode=TwoWay}" />
                    </StackPanel>
                </ui:SettingsCard>
                <ui:SettingsCard Header="{x:Bind i18n:Strings.CustomConfigurationFilePath}" Description="{x:Bind _viewModel.CustomConfigurationFilePath, Mode=OneWay}" Visibility="{x:Bind vc:ConvertMethod.BoolToVisibility(_viewModel.EnableCustomConfigurationFile), Mode=OneWay}">
                    <Button Click="SetCustomConfigurationFilePath">
                        <FontIcon Glyph="&#xE838;" />
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard Header="{x:Bind i18n:Strings.EnableHttps}" Visibility="{x:Bind vc:ConvertMethod.BoolToVisibility(_viewModel.ShowHttpsConfig), Mode=OneWay}">
                    <ToggleSwitch OnContent="{x:Bind i18n:Strings.On}" OffContent="{x:Bind i18n:Strings.Off}" IsOn="{x:Bind _viewModel.EnableHttps, Mode=TwoWay}" />
                </ui:SettingsCard>
                <ui:SettingsCard Header="{x:Bind i18n:Strings.CertificatePemPath}" Description="{x:Bind _viewModel.CertificatePemPath, Mode=OneWay}" Visibility="{x:Bind vc:ConvertMethod.BoolToVisibility(_viewModel.ShowHttpsCertConfig), Mode=OneWay}">
                    <Button Click="SetCertificatePemPath">
                        <FontIcon Glyph="&#xE838;" />
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard Header="{x:Bind i18n:Strings.CertificatePemKeyPath}" Description="{x:Bind _viewModel.CertificatePemKeyPath, Mode=OneWay}" Visibility="{x:Bind vc:ConvertMethod.BoolToVisibility(_viewModel.ShowHttpsCertConfig), Mode=OneWay}">
                    <Button Click="SetCertificatePemKeyPath">
                        <FontIcon Glyph="&#xE838;" />
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard Header="{x:Bind i18n:Strings.MaxHistoryCount}" Description="{x:Bind i18n:Strings.MaxHistoryCountDescription}">
                    <NumberBox Value="{x:Bind _viewModel.MaxHistoryCount, Mode=TwoWay}"
                               Minimum="1"
                               Maximum="10000"
                               SpinButtonPlacementMode="Inline"
                               SmallChange="100"
                               LargeChange="1000" />
                </ui:SettingsCard>
            </ui:SettingsExpander.Items>
        </ui:SettingsExpander>
        <local:ServerSettingDialog x:Name="_ServerSettingDialog" PrimaryButtonClick="ServerSettingDialog_OkClick" TextBoxName="{x:Bind i18n:Strings.Port}" />
    </StackPanel>
</Page>
