<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="SyncClipboard.WinUI3.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <BitmapImage x:Key="AppLogo" UriSource="ms-appx:///Assets/icon.png" />
                    <Color x:Key="TitleBarButtonForegroundColor">Black</Color>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <BitmapImage x:Key="AppLogo" UriSource="ms-appx:///Assets/icon_white.png" />
                    <Color x:Key="TitleBarButtonForegroundColor">White</Color>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <!-- Other app resources here -->
            <Style TargetType="TextBox">
                <Setter Property="IsSpellCheckEnabled" Value="False"/>
            </Style>
            <Style TargetType="FontIcon">
                <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
            </Style>
            <Style TargetType="FontIconSource">
                <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
            </Style>
            <Style x:Key="IconToggleButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource DefaultToggleButtonStyle}">
                <Setter Property="Height" Value="24" />
                <Setter Property="Width" Value="24" />
                <Setter Property="Padding" Value="0,0,0,0" />
                <Setter Property="BorderThickness" Value="0,0,0,0" />
                <Setter Property="Background" Value="Transparent" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
